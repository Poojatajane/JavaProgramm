import.java.util.ArrayList;

public class collection {

public static voi main (String[]args) {

ArrayList al = new ArrayList ();
al.add("Aa");
al.add("Bb");
al.add("Cc");
al.add("Dd")
System.out.println("ArrayList 1: "+al);

ArrayList al2 = new ArrayList();
al2.add("Ee");
al2.add("Ff");
al2.add("Gg");
al2.add("Hh");
System.out.println("Array List: "+al2);

al.addAll(al2);
System.out.println(al);                                // addAll() method use to join two arrays

al.add(9, "Pooja");
System.out.println(al);                             //add() method use to insert new word/character at given index 

al.remove(12);
System.out.println(al);                              //remove() method use to remove the character/word of given index

int size= al.size();
System.out.println("size of array : "+size);          // int size() method use to identify the size of array

}
}
